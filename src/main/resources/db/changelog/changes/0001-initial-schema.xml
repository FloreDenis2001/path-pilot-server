<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="your_username">
        <createTable tableName="shipments">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_shipments"/>
            </column>
            <column name="origin" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="destination" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="estimated_delivery_date" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="your_username">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="your_username">
        <createTable tableName="customers">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_customers"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="address" type="varchar(255)"/>
            <column name="phone" type="varchar(255)"/>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_customers_users"
                                 baseTableName="customers"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="4" author="your_username">
        <createTable tableName="drivers">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_drivers"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="license_number" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(255)"/>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_drivers_users"
                                 baseTableName="drivers"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="5" author="your_username">

        <createTable tableName="orders">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_orders"/>
            </column>
            <column name="customer_id" type="bigint"/>
            <column name="shipment_id" type="bigint"/>
            <column name="order_date" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
            <column name="total_amount" type="double"/>
        </createTable>


        <addForeignKeyConstraint constraintName="fk_orders_customers"
                                 baseTableName="orders"
                                 baseColumnNames="customer_id"
                                 referencedTableName="customers"
                                 referencedColumnNames="id"/>


        <addForeignKeyConstraint constraintName="fk_orders_shipments"
                                 baseTableName="orders"
                                 baseColumnNames="shipment_id"
                                 referencedTableName="shipments"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="6" author="your_username">
        <createTable tableName="vehicles">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_vehicles"/>
            </column>

            <column name="registration_number" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="capacity" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="7" author="your_username">
        <createTable tableName="shipment_details">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_shipment_details"/>
            </column>
            <column name="shipment_id" type="bigint"/>
            <column name="vehicle_id" type="bigint"/>
            <column name="driver_id" type="bigint"/>
            <column name="departure_date" type="datetime(6)"/>
            <column name="arrival_time" type="datetime(6)"/>
        </createTable>


        <addForeignKeyConstraint constraintName="fk_shipment_details_shipments"
                                 baseTableName="shipment_details"
                                 baseColumnNames="shipment_id"
                                 referencedTableName="shipments"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_shipment_details_vehicles"
                                 baseTableName="shipment_details"
                                 baseColumnNames="vehicle_id"
                                 referencedTableName="vehicles"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_shipment_details_drivers"
                                 baseTableName="shipment_details"
                                 baseColumnNames="driver_id"
                                 referencedTableName="drivers"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
