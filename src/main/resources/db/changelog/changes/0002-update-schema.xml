<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="10" author="admin" >
        <dropForeignKeyConstraint
                constraintName="fk_drivers_users"
                baseTableSchemaName="pathpilot_db"
                baseTableName="drivers"/>
        <dropColumn tableName="drivers" columnName="user_id"/>
    </changeSet>

    <changeSet id="11" author="admin" context="!test">
        <dropForeignKeyConstraint
                constraintName="fk_customers_users"
                baseTableSchemaName="pathpilot_db"
                baseTableName="customers"/>
        <dropColumn tableName="customers" columnName="user_id"/>
    </changeSet>

    <changeSet id="12" author="admin" >
        <createTable tableName="companies">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_company"/>
            </column>
            <column name="capital" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="company_city" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="company_country" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="company_postal_code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="company_street" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="company_number" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="industry" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="registration_number" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="website" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="13" author="admin">
        <dropColumn tableName="shipments" columnName="origin"/>
    </changeSet>

    <changeSet id="14" author="admin">
        <renameColumn columnDataType="varchar(255)" tableName="companies" oldColumnName="company_city" newColumnName="city"/>
        <renameColumn columnDataType="varchar(255)" tableName="companies" oldColumnName="company_country" newColumnName="country"/>
        <renameColumn columnDataType="varchar(255)" tableName="companies" oldColumnName="company_postal_code" newColumnName="postal_code"/>
        <renameColumn columnDataType="varchar(255)" tableName="companies" oldColumnName="company_street" newColumnName="street"/>
        <renameColumn columnDataType="varchar(255)" tableName="companies" oldColumnName="company_number" newColumnName="number"/>
    </changeSet>


    <changeSet id="15" author="admin">
        <dropColumn tableName="shipments" columnName="destination"/>
    </changeSet>

    <changeSet id="16" author="admin">
        <addColumn tableName="orders">
            <column name="weight" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="height" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="width" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="volume" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="17" author="admin">
        <renameColumn columnDataType="bigint" tableName="shipment_details" oldColumnName="shipment_id" newColumnName="order_id"/>
    </changeSet>

<!--    <changeSet id="18" author="admin">-->
<!--        <dropColumn tableName="shipment_details" columnName="shipment_date"/>-->
<!--    </changeSet>-->

    <changeSet id="19" author="admin">

        <addForeignKeyConstraint constraintName="fk_orders_shipment_details"
                                 baseTableName="orders"
                                 baseColumnNames="shipment_details_id"
                                 referencedTableName="shipment_details"
                                 referencedColumnNames="id"/>
    </changeSet>





</databaseChangeLog>